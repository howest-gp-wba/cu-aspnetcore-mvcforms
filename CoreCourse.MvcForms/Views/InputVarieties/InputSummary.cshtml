            <td><label asp-for="Password"></label></td>
            <td>@Model.Password</td>
        </tr>
        <tr>
            <td><label asp-for="Url"></label></td>
            <td>@Model.Url</td>
        </tr>
        <tr>
            <td><label asp-for="PhoneNumber"></label></td>
            <td>@Model.PhoneNumber</td>
        </tr>
        <tr>
            <td><label asp-for="FavoriteInt"></label></td>
            <td>@Model.FavoriteInt</td>
        </tr>
        <tr>
            <td><label asp-for="PI"></label></td>
            <td>@Model.PI</td>
        </tr>
        <tr>
            <td><label asp-for="EnteredDateAndTime"></label></td>
            <td>@Model.EnteredDateAndTime</td>
        </tr>
        <tr>
            <td><label asp-for="EnteredDate"></label></td>
            <td>@Model.EnteredDate</td>
        </tr>
        <tr>
            <td><label asp-for="EnteredTime"></label></td>
            <td>@Model.EnteredTime</td>
        </tr>
        <tr>
            <td><label asp-for="ShortDescription"></label></td>
            <td>@Model.ShortDescription</td>
        </tr>
        <tr>
            <td><label asp-for="ShowSummary"></label></td>
